<div class="header pt-3 d-flex justify-content-around">
  <%= link_to "", groups_path, class: "fa fa-arrow-left d-inline-block pr-5" %>
  <h3 class="text-center d-inline-block"> <%= @group.name %> </h3>
  <%= link_to "Log out", destroy_user_session_path, class: "fa fa-sign-out d-inline-block pr-5" %>
</div>

<p style="color: green"><%= notice %></p>

<% if @group.user == current_user.id %>

  <div id="groups" class="container" style="height: 100%;">
  <div class="cont">
    <% if @entities.empty? %>
      <div>
        <h2 class="text-center mt-5 px-3">There are no transactions yet!</h2>
      </div>
    <% else %>
     <% @entities.each do |entity| %>
            <div style="height: 100%;" class="mt-3 mb-3 border border-dark p-1 container d-flex justify-content-around">
              <div class=" d-inline-block">
                <h2> <%= entity.name %> </h2>
              </div>
              <div class="d-flex justify-content-between flex-column my-auto">
                <p> <%= entity.amount %> </p>
              </div>
            </div>
             
        <% end %>
    <% end %>
  </div>
</div>


<% end %>

<%= link_to "New Transaction", new_entity_path, class: "green btn btn-block fixed-bottom" %>
